<h1>Escribe tu correo electronico y la nueva contraseña que te gustaria elegir</h1>

<label for="email">Email:</label>
<input type="email" class="register-data" name="email" placeholder="Escribe tu email" id="userActive" />

<br />

<label for="password">Contraseña:</label>
<input type="password" class="register-data" name="password" placeholder="Escribe tu contraseña" id="newpass" />

<br />

<button id="recoverpass">Enviar</button>
<br />


<script>

    const user = document.getElementById('userActive');
    const pass = document.getElementById('newpass');
    const send = document.getElementById('recoverpass')

    send.addEventListener('click', (e) => {

        await fetch(`/recoverPassword/${user.value}/${pass.value}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })

    })

</script>